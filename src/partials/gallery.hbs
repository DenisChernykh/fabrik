<div class='swiper swiper__gallery'>
    <!-- Обертка для слайдов -->
    <div class='swiper-wrapper swiper-wrapper-gallery'>
        <!-- Слайды -->
        <div class='swiper-slide gallery-swiper-slide'>
            <img src='images/gallery/1.jpg' alt='Галлерея' />
        </div>
        <div class='swiper-slide gallery-swiper-slide'>
            <img src='images/gallery/2.jpg' alt='Галлерея' />
        </div>
        <div class='swiper-slide gallery-swiper-slide'>
            <img src='images/gallery/3.jpg' alt='Галлерея' />
        </div>
        <div class='swiper-slide gallery-swiper-slide'>
            <img src='images/gallery/4.jpg' alt='Галлерея' />
        </div>
        <div class='swiper-slide gallery-swiper-slide'>
            <img src='images/gallery/1.jpg' alt='Галлерея' />
